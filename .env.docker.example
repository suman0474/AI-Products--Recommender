# ============================================================================
# AI Product Recommender - Docker Environment Configuration
# ============================================================================
# Copy this file to .env and fill in the values
#
# ============================================================================

# =============================================================================
# REQUIRED: Security
# =============================================================================
# Flask secret key (generate a secure random string)
SECRET_KEY=your-super-secure-secret-key-change-this

# =============================================================================
# REQUIRED: API Keys
# =============================================================================
# Google API Key (for Gemini/PaLM embeddings and LLM)
GOOGLE_API_KEY=your-google-api-key-here

# OpenAI API Key (optional, for GPT models)
OPENAI_API_KEY=

# Search APIs (at least one required for full functionality)
SERPAPI_KEY=
SERPER_API_KEY=

# =============================================================================
# Vector Store Configuration
# =============================================================================
# Options: "faiss" (default/local), "chromadb" (self-hosted), "chromadb_cloud"
VECTOR_STORE_TYPE=faiss

# ChromaDB Cloud (if using chromadb_cloud)
# CHROMADB_CLOUD_API_KEY=
# CHROMADB_CLOUD_TENANT=default_tenant
# CHROMADB_CLOUD_DATABASE=default_database

# =============================================================================
# Azure Storage (Optional)
# =============================================================================
# Azure Blob Storage connection string
AZURE_STORAGE_CONNECTION_STRING=

# Azure Cosmos DB connection string
AZURE_COSMOS_CONNECTION_STRING=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true

# =============================================================================
# Gunicorn Worker Settings (for Docker)
# =============================================================================
# Adjust based on container resources
GUNICORN_WORKERS=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=3600
