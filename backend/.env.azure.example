# Azure Blob Storage Configuration for Workflow Checkpointing
# Copy this file to .env and fill in your Azure Storage credentials

# Option 1: Connection String (Recommended for development/testing)
# Get this from Azure Portal -> Storage Account -> Access Keys
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your_key_here;EndpointSuffix=core.windows.net

# Option 2: Account URL + Managed Identity (Recommended for production)
# AZURE_STORAGE_ACCOUNT_URL=https://yourstorageaccount.blob.core.windows.net
# AZURE_USE_MANAGED_IDENTITY=true

# Checkpoint Container Configuration
AZURE_CHECKPOINT_CONTAINER_PREFIX=workflow-checkpoints
AZURE_CHECKPOINT_DEFAULT_ZONE=DEFAULT
AZURE_CHECKPOINT_TTL_HOURS=72
AZURE_CHECKPOINT_MAX_PER_THREAD=100

# Redis Configuration (for rate limiting and session management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Other Configuration
# Add your other environment variables here
